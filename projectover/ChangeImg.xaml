<UserControl x:Class="projectover.ChangeImg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <Border Background="White" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="30" Background="#ffecb9" BorderBrush="Black" BorderThickness="4" Grid.Row="0">
                <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="backButton"
                            Grid.Column="0" 
                            Height="75" Width="75" 
                            VerticalAlignment="Top"
                            Click="backbutton_Click"
                            Foreground="#dc8ee9"
                            Background="Transparent"
                            BorderBrush="Transparent">
                    <Image Source="C:\Users\acer\Desktop\png project\back-button.png"/>
                </Button>
                <Border Grid.Column="1" >
                <TextBlock Text="เปลี่ยนข้อมูล User" 
                       Background="Transparent"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="50"
                       FontFamily="itim"
                       Margin="0,0,90,0"/>
                </Border>
                </Grid>
                </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="ค้นหารูป"
                           FontFamily="itim"
                           FontSize="36"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="30,20,30,0" Height="60"/>

                    <Grid HorizontalAlignment="Center"
                           Grid.Row="2"
                           Height="60" Margin="-30">

                        <Border CornerRadius="20" 
                                 Background="#ded6d6"
                                 BorderBrush="Black"
                                 BorderThickness="4"
                                 Width="200">

                            <Button     x:Name="BrowseButton"
                                         Content="Browse"
                                         Background="Transparent"
                                         FontSize="36"
                                         FontFamily="itim"
                                         BorderThickness="0"
                                         Click="Browse_Click"/>
                        </Border>
                        
                    </Grid>
                    
                    <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Text="ชื่อ เล่น / สำหรับให้คนเรียก"
                           FontFamily="itim"
                           FontSize="36"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="30,20,30,0" Height="60"/>
                    
                    <Border CornerRadius="20"
                        Background="White" 
                        Grid.Row="4" 
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="5"
                        Height="65"
                        VerticalAlignment="Center"
                        Width="600"
                        HorizontalAlignment="Center">
                        <TextBox x:Name="TBName" 
                             Background="Transparent" 
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="10,0,0,0" 
                             FontSize="18"/>
                    </Border>

                    <Grid HorizontalAlignment="Center"
                          Grid.Row="5"
                          Height="60" Margin="-30">

                        <Border CornerRadius="20" 
                                Background="#b5ff9a"
                                BorderBrush="Black"
                                BorderThickness="4"
                                Width="200">

                            <Button     x:Name="ConfirmButton"
                                    Content="Confirm"
                                    Background="Transparent"
                                    FontSize="36"
                                    FontFamily="itim"
                                    BorderThickness="0"
                                    Click="Confirm_Click"/>
                        </Border>
                    </Grid>



                </Grid>
                <Border CornerRadius="30" Width="400" Height="600" 
                            BorderThickness="4"
                            BorderBrush="Black" Grid.Column="0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"
                    Stretch="UniformToFill" >
                        </ImageBrush>
                    </Border.Background>
                </Border>
            </Grid>
        </Grid>
        </Border>
</UserControl>
