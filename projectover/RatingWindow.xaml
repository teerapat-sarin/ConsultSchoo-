<Window x:Class="projectover.RatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ให้คะแนนผู้ให้คำปรึกษา"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f8f8f8">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ให้คะแนนผู้ให้คำปรึกษา" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" x:Name="StarPanel"/>

            <Button Content="ยืนยัน" Width="100" Height="35" 
                    Background="#2D89EF" Foreground="White"
                    Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>
