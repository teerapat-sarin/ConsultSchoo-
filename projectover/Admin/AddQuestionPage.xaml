<UserControl x:Class="projectover.AddQuestionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <Border Background="#f0e6e6" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Border Background="#fff572"  Grid.Row="0" Margin="0,0,0,0" CornerRadius="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="HamburgerButton"
                            Width="80" Height="80"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="20,30,0,0"
                            Foreground="#dc8ee9"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="1" 
                            Click="Back_Click"
                            Grid.Column="0">
                        <Image Source="C:\Users\acer\Desktop\png project\back-button.png"/>
                    </Button>

                    <Border CornerRadius="10" Margin="0,0,0,0" Grid.Column="1" Width="500" HorizontalAlignment="Left" >
                        <Border.Background>
                            <ImageBrush ImageSource="C:\Users\acer\Desktop\png project\Consult School.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
            <Border Background="White" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                          Text="โจทย์ที่จะเพิ่ม"
                          FontFamily="itim"
                          FontSize="56"
                          VerticalAlignment="Bottom"
                          Margin="30,20,30,0" Height="60"
                               HorizontalAlignment="Center"/>
                    <Border CornerRadius="20"
                        Background="White" 
                        Grid.Row="1" 
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="5"
                        Height="65"
                        Width="1200"
                        HorizontalAlignment="Center">
                        <TextBox x:Name="TBQuestion" 
                             Background="Transparent" 
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="10,0,0,0" 
                             FontSize="18"/>
                    </Border>

                    <TextBlock Grid.Row="2"
                          Text="ประเภทของคำถาม"
                          FontFamily="itim"
                          FontSize="56"
                          VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                          Margin="30,20,30,0" Height="60"/>
                    <Border CornerRadius="20"
                            Background="White" 
                            Grid.Row="3" 
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="5"
                            Height="65"
                            Width="600"
                            HorizontalAlignment="Center">
                        <ComboBox x:Name="CBType"
                                  Width="580"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="36"
                                  VerticalContentAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Padding="10,0,0,0"
                                  FontFamily="itim"
                                  IsEditable="False"  
                            SelectedIndex="0">
                            <!-- ค่าเริ่มต้นเลือกตัวแรก -->
                            <ComboBoxItem Content="E"/>
                            <ComboBoxItem Content="I"/>
                            <ComboBoxItem Content="S"/>
                            <ComboBoxItem Content="N"/>
                            <ComboBoxItem Content="T"/>
                            <ComboBoxItem Content="F"/>
                            <ComboBoxItem Content="J"/>
                            <ComboBoxItem Content="P"/>
                        </ComboBox>
                    </Border>
                </Grid>
            </Border>
            <Border Grid.Row="2" Width="200" Height="60" Background="#00e909" CornerRadius="20">
                <Button Grid.Row="2" Background="Transparent" BorderThickness="0" Content="Confirm" FontSize="36"
                        FontWeight="Bold" FontFamily="itim" Foreground="White" Click="Confirm_Click"/>
                </Border>
        </Grid>
        </Border>
</UserControl>
