<UserControl x:Class="projectover.AdminReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <Border Background="White" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Background="#fff572"  Grid.Row="0" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="HamburgerButton"
                            Width="50" Height="40"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="20,30,0,0"
                            Foreground="#dc8ee9"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="1" 
                            Click="HamburgerButton_Click"
                            Grid.Column="0">
                        <Image Source="C:\Users\acer\Downloads\sort.png"/>
                    </Button>

                    <Border CornerRadius="10" Margin="0,0,0,0" Grid.Column="1" Width="500" HorizontalAlignment="Left" >
                        <Border.Background>
                            <ImageBrush ImageSource="C:\Users\acer\Desktop\png project\Consult School.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
            
            <Border Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="#24ff00"
                            Width="350"
                            Height="150"
                            CornerRadius="50"
                            BorderThickness="4"
                            BorderBrush="Black">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       FontSize="36"
                                       FontWeight="SemiBold"
                                       FontFamily="Itim"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                           จำนวนผู้ใช้
                                        <LineBreak/>
                                            ทั้งหมด: 
                            </TextBlock>
                            <TextBlock x:Name="GreenNumberTextBlock"
                                       FontSize="72"
                                       FontWeight="SemiBold"
                                       FontFamily="Itim"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Grid.Column="1"
                                       Foreground="White"/>
                        </Grid>
                    </Border>
                    
                    <Border Grid.Column="1" 
                            Background="#ff0000"
                            Width="350"
                            Height="150"
                            CornerRadius="50"
                            BorderThickness="4"
                            BorderBrush="Black">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       FontSize="30"
                                       FontWeight="SemiBold"
                                       FontFamily="Itim"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                       จำนวนที่ทำ
                                       <LineBreak/>
                                        แบบประเมิน
                                       <LineBreak/> 
                                        MBTI
                            </TextBlock>
                            <TextBlock x:Name="RedNumberTextBlock"
                                       FontSize="72"
                                       FontWeight="SemiBold"
                                       FontFamily="Itim"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Grid.Column="1"
                                       Foreground="White"/>
                        </Grid>
                    </Border>
                    
                    <Border Grid.Column="2" 
                            Background="#fff29a"
                            Width="500"
                            Height="100"
                            CornerRadius="30"
                            BorderThickness="4"
                            BorderBrush="Black"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left">
                        <TextBlock Text="สัดส่วนของบุคลิกภาพ"
                                   Background="Transparent"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="52"
                                   FontWeight="Bold"
                                   FontFamily="itim"/>
                    </Border>

                </Grid>
            </Border>
            <Border CornerRadius="50" Width="1300" Height="440" Grid.Row="2" Background="#9afff6" BorderBrush="Black" BorderThickness="4" VerticalAlignment="Top">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <UniformGrid x:Name="MBTIWrapPanel" 
                                 Columns="4" Rows="4" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Top"/>
                </ScrollViewer>
            </Border>
            <Popup x:Name="MenuPopup" IsOpen="False" Placement="Relative"/>

        </Grid>

    </Border>
</UserControl>
