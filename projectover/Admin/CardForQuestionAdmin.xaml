<UserControl x:Class="projectover.CardForQuestionAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="1200">
    <UserControl.Resources>
        <!-- Style สำหรับ Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Width" Value="175"/>
            <Setter Property="Height" Value="250"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CircleRadioButtonStyleA" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse Stroke="#00e909" StrokeThickness="2" Fill="White"/>
                            <Ellipse x:Name="CheckedEllipse" Fill="#b5ff9a" Width="110" Height="110" Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CircleRadioButtonStyleA2" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse Stroke="#00e909" StrokeThickness="2" Fill="White"/>
                            <Ellipse x:Name="CheckedEllipse" Fill="#b5ff9a" Width="80" Height="80" Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CircleRadioButtonStyleA3" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse Stroke="#00e909" StrokeThickness="2" Fill="White"/>
                            <Ellipse x:Name="CheckedEllipse" Fill="#b5ff9a" Width="40" Height="40" Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircleRadioButtonStyleB" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse Stroke="#ff1818" StrokeThickness="2" Fill="White"/>
                            <Ellipse x:Name="CheckedEllipse" Fill="#f98181" Width="110" Height="110" Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CircleRadioButtonStyleB2" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse Stroke="#ff1818" StrokeThickness="2" Fill="White"/>
                            <Ellipse x:Name="CheckedEllipse" Fill="#f98181" Width="80" Height="80" Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CircleRadioButtonStyleB3" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse Stroke="#ff1818" StrokeThickness="2" Fill="White"/>
                            <Ellipse x:Name="CheckedEllipse" Fill="#f98181" Width="40" Height="40" Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Width="1100" Padding="0" CornerRadius="20" Background="White" Height="250"
            Style="{StaticResource CardStyle}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="1000" Height="250" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Grid.Column="1">
                    <Border Background="#FFB84D" Width="80" Height="30" CornerRadius="10">
                        <Button Content="แก้ไข" FontFamily="itim" FontSize="20"  Margin="0,0,0,0" Background="Transparent"
                                BorderThickness="0" Foreground="White" Click="Setting_Click"/>
                    </Border>
                    <Border Background="#FF4D4D" Width="80" Height="30" CornerRadius="10" Margin="20,0,0,0">
                            <Button Content="ลบ" FontFamily="itim" FontSize="20" Background="Transparent" Foreground="White"
                                    BorderThickness="0" Click="Delete_Click"/>
                    </Border>
    </StackPanel>
                <TextBlock Text="{Binding Question, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="28" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,20,0,20" FontFamily="itim"/>
            </Grid>
            <Grid Height="150">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ฉันเห็นด้วย"
                       FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,20,0,20" 
                           FontFamily="itim" Grid.Column="0"/>
                <RadioButton Grid.Column="1" Width="120" Height="120" Style="{StaticResource CircleRadioButtonStyleA}" BorderBrush="Red"/>
                <RadioButton Grid.Column="2" Width="90" Height="90" Style="{StaticResource CircleRadioButtonStyleA2}"/>
                <RadioButton Grid.Column="3" Width="50" Height="50" Style="{StaticResource CircleRadioButtonStyleA3}"/>
                <RadioButton Grid.Column="4" Width="50" Height="50" Style="{StaticResource CircleRadioButtonStyleB3}"/>
                <RadioButton Grid.Column="5" Width="90" Height="90" Style="{StaticResource CircleRadioButtonStyleB2}"/>
                <RadioButton Grid.Column="6" Width="120" Height="120" Style="{StaticResource CircleRadioButtonStyleB}"/>

                <TextBlock Text="ฉันไม่เห็นด้วย"
                       FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,20,0,20" 
                           FontFamily="itim" Grid.Column="7"/>
            </Grid>

        </StackPanel>
    </Border>
</UserControl>
