<Page x:Class="projectover.ChooseStuorTea"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectover"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="ChooseStuorTea">
    <Page.Resources>
        <Style x:Key="TeacherButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontFamily" Value="/Resources/Noto/NotoSans-Bold.ttf#Noto Sans"/>
            <Setter Property="Background" Value="#fac83d"/>

            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="30" Margin="20" Padding="20">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StudentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontFamily" Value="Gluten"/>
            <Setter Property="Background" Value="#62f6ff"/>

            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="30" Margin="20" Padding="20">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Border CornerRadius="15" Background="White" Margin="20" Padding="20">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="35*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Label Name="Lbsati" Grid.Column="1" Content="ConsultSchool" FontSize="48" HorizontalAlignment="Left"
                         Margin="256,11,0,9" FontFamily="Gluten"/>

                <Border CornerRadius="20" Background="Gray" Grid.Column="0" Width="120" Height="60">
                    <Button    Name="Satiuu" Height="50" Width="80" Content="Back" Click="Satiuu_Click" 
                                    FontSize="28" RenderTransformOrigin="-10.464,0.446" Margin="20,10,20,0"
                                   Foreground="White" FontFamily="Gluten"
                                  Background="Transparent"
                                   BorderThickness="0"/>
                </Border>

            </Grid>
            <Grid Name ="Gridsati" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,400,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="500"/>

                </Grid.ColumnDefinitions>

                <TextBlock Name ="TBsati" Text="Who Are You ? "
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                   Margin="336,-187,0,0" FontSize="50" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontFamily="Gluten"/>

                <Button Name ="backtologin" Grid.Column="0" Content="Student" 
                    Grid.Row="1"
                FontFamily="Gluten"
                Click="StudentButton_Click"
                
                Style="{StaticResource StudentButtonStyle}"/>

                <Button Content="Consultant"
                    Grid.Row="1"
                Name="Backtologin"
                Grid.Column="1"
                FontFamily="Gluten"
                Click="ConsulterButton_Clicks" RenderTransformOrigin="0.815,1.877"
                Style="{StaticResource TeacherButtonStyle}"/>
            </Grid>
        </Grid>
    </Border>
    
</Page>
