<UserControl x:Class="projectover.Aboutpage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <Border Background="#f0e6e6" CornerRadius="20" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="170"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#fac83d" CornerRadius="20" Margin="5" BorderBrush="Black" BorderThickness="5" Grid.Row="0" Width="1200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" >
                        <Ellipse Width="140" Height="140" Margin="0,0,0,0" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                                     Stroke="DarkBlue"
                                     StrokeThickness="8">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="C:\Users\acer\Desktop\Professor\Teerapat.png" Stretch="UniformToFill" AlignmentY="Top"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock Text="Admin A" FontSize="80"
                               HorizontalAlignment="left" 
                               VerticalAlignment="Center"
                               FontFamily="Itim"
                               Margin="20"/>
                    </Grid>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="20" Margin="20" BorderBrush="Black" BorderThickness="5" Grid.Row="1" Width="1200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" >
                        <Border CornerRadius="30" Margin="20">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="LeftImageTransform"/>
                            </Border.RenderTransform>
                            <Border.Background>
                                <ImageBrush ImageSource="C:\Users\acer\Desktop\Professor\Teerapat.png" Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="Admin A"
                                   FontSize="100"
                                   FontFamily="Itim"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,20,0">
                            <Image Source="C:\Users\acer\Desktop\png project\User.png" Width="80" Height="80" Margin="0,0,40,0"/>
                            <!-- ข้อความ -->
                            <TextBlock Text="นายธีภรัทร สารินทร์" VerticalAlignment="Center"  FontSize="50" FontFamily="Itim"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,100,0">
                            <Image Source="C:\Users\acer\Desktop\png project\facebook.png" Width="80" Height="80" Margin="0,0,40,0"/>
                            <!-- ข้อความ -->
                            <TextBlock Text="Teerapat sarin" VerticalAlignment="Center"  FontSize="50" FontFamily="Itim"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,155,0">
                            <Image Source="C:\Users\acer\Desktop\png project\instagram.png" Width="80" Height="80" Margin="0,0,40,0"/>
                            <!-- ข้อความ -->
                            <TextBlock Text="no_.just._su" VerticalAlignment="Center"  FontSize="50" FontFamily="Itim"/>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,100,0">
                            <Image Source="C:\Users\acer\Desktop\png project\phone-call.png" Width="80" Height="80" Margin="0,0,40,0"/>
                            <!-- ข้อความ -->
                            <TextBlock Text="065-385-4151" VerticalAlignment="Center"  FontSize="50" FontFamily="Itim"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            <Button x:Name="HamburgerButton"
                Width="50" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="20,30,0,0"
                Foreground="#dc8ee9"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="1" 
                Click="HamburgerButton_Click">
                <Image Source="C:\Users\acer\Downloads\sort.png"/>
            </Button>

            <!-- Overlay / Menu -->
            <Popup x:Name="MenuPopup" IsOpen="False" Placement="Relative"/>
        </Grid>
    </Border>
</UserControl>
