<UserControl x:Class="projectover.FindYourSelf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    
    <Border Background="#f0e6e6" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#fff572"  Grid.Row="0" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="HamburgerButton"
                            Width="50" Height="40"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="20,30,0,0"
                            Foreground="#dc8ee9"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="1" 
                            Click="HamburgerButton_Click"
                            Grid.Column="0">
                        <Image Source="C:\Users\acer\Downloads\sort.png"/>
                    </Button>

                    <Border CornerRadius="10" Margin="0,0,0,0" Grid.Column="1" Width="500" HorizontalAlignment="Left" >
                        <Border.Background>
                            <ImageBrush ImageSource="C:\Users\acer\Desktop\png project\Consult School.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Border CornerRadius="30" Background="White" Margin="50,20,50,20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="30">
                        <StackPanel>
                            <!-- หัวข้อ -->
                            <Border CornerRadius="40"
                        Background="#00e909"
                        Width="300"
                        Height="100"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                                <TextBlock Text="ค้นหาตัวเอง"
                               FontSize="48"
                               FontWeight="ExtraBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontFamily="Itim"/>
                            </Border>

                            <!-- การ์ด -->
                            <WrapPanel x:Name="WrapPanelContainer"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           ItemWidth="1200"
                           ItemHeight="280"
                           Margin="0">
                            </WrapPanel>
                            <Border CornerRadius="40"
                        Background="#00e909"
                        Width="300"
                        Height="100"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                                <Button Content="ตรวจผล"
                               FontSize="48"
                               FontWeight="ExtraBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="Transparent"
                                        BorderThickness="0"
                               FontFamily="Itim" Click="CheckResult_Click"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
            <!-- Overlay / Menu -->
            <Popup x:Name="MenuPopup" IsOpen="False" Placement="Relative"/>
        </Grid>
    </Border>
    
</UserControl>
