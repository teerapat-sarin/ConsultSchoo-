<Window x:Class="projectover.BanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="แบนผู้ใช้" Height="350" Width="500" WindowStartupLocation="CenterScreen">
    <Border>
        <StackPanel Margin="20">
        <TextBlock Text="ระยะเวลาการแบน (วัน):" FontFamily="Itim" FontSize="24"/>
        <TextBox x:Name="DaysTextBox" Margin="0,5,0,15" FontSize="24"/>

        <TextBlock Text="สาเหตุ:" FontFamily="Itim" FontSize="24"/>
        <TextBox x:Name="ReasonTextBox" Margin="0,5,0,15" FontSize="24" 
                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Background="Red" Margin="0,0,50,0" CornerRadius="20" >
                    <Button Content="ยืนยัน" 
                    Width="120" 
                    Click="Confirm_Click"
                    Height="50"
                    FontFamily="itim"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"/>
                    </Border>
                <Border Background="#00ff12"  CornerRadius="20" >
                    <Button Content="ยกเลิก" 
                    Width="120" Click="Cancel_Click"
                    Height="50"
                    FontFamily="itim"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"/>
                </Border>
            </StackPanel>
    </StackPanel>
        </Border>
</Window>
