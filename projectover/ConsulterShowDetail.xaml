<UserControl x:Class="projectover.ConsulterShowDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="670" d:DesignWidth="1000">

    <Border CornerRadius="30" Background="White" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="20" Background="#fff572" Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0">
                        <Border.Background>
                            <ImageBrush ImageSource="C:\Users\acer\Desktop\png project\Consult School.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                    <Border CornerRadius="20" Width="350" Grid.Column="1"
                            Margin="0,0,0,0">
                        <TextBlock Text="ผู้ให้คำปรึกษา"
                           FontSize="48"
                           FontWeight="ExtraBold"
                           Foreground="#1E88E5"
                           VerticalAlignment="Center"
                           Grid.Row="0"
                           FontFamily="Itim"/>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Text="ชื่อ เล่น / สำหรับให้คนเรียก"
                           FontFamily="itim"
                           FontSize="36"
                           VerticalAlignment="Top"
                           Margin="30,20,30,0" Height="60"/>

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="ชื่อ จริง (มีคำนำหน้า)"
                           FontFamily="itim"
                           FontSize="36"
                           VerticalAlignment="Top"
                           Margin="30,20,30,0" Height="60"/>

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Text="บทบาท เช่น นักจิตวิทยาปรึกษา "
                           FontFamily="itim"
                           FontSize="36"
                           VerticalAlignment="Top"
                           Margin="30,20,30,0" Height="60"/>

                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           Text="หัวข้อ หรือปัญหาที่จะช่วย"
                           FontFamily="itim"
                           FontSize="36"
                           VerticalAlignment="Top"
                           Margin="30,20,30,0" Height="60"/>

                <Border CornerRadius="20"
                        Background="White" 
                        Grid.Row="1" 
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="5"
                        Height="65"
                        Width="450"
                        HorizontalAlignment="Left">
                    <TextBlock x:Name="TBName" 
                             Background="Transparent"
                             Text="ติ๊"
                             VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="itim"
                             FontSize="46"
                             FontWeight="Bold"/>
                </Border>

                <Border CornerRadius="20"
                        Background="White" 
                        Grid.Row="3" 
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="5"
                        Height="65">
                    <TextBlock x:Name="TBFullname" 
                             Background="Transparent"
                             Text="ติ๊"
                             VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="itim"
                             FontSize="46"
                             FontWeight="Bold"/>
                </Border>

                <Border CornerRadius="20"
                        Background="White" 
                        Grid.Row="5" 
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="5"
                        Height="65">
                    <TextBlock x:Name="TBRole" 
                             Background="Transparent"
                             Text="ติ๊"
                             VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="itim"
                             FontSize="46"
                             FontWeight="Bold"/>
                </Border>

                <Border CornerRadius="20"
                        Background="White" 
                        Grid.Row="7" 
                        Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="5"
                        Height="65">
                    <TextBlock x:Name="TBTopic" 
                             Background="Transparent"
                             Text="ติ๊"
                             VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="itim"
                             FontSize="46"
                             FontWeight="Bold"/>
                </Border>

                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Text="รูป"
                           FontFamily="itim"
                           FontSize="48"
                           VerticalAlignment="Top"
                           Margin="30,0,30,0" Height="60"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"/>
                <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="7">
                    <Border x:Name="BorderImage"
            CornerRadius="30"
            Width="300"
            Height="400"
            BorderThickness="4"
            BorderBrush="Black">
                        <Border.Background>
                            <ImageBrush Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Grid>




            <Border CornerRadius="20" Background="#fff572" Grid.Row="2" Padding="20">
                <Grid HorizontalAlignment="Center"  Height="60" Margin="-30">
                    <Border CornerRadius="20"
                        Background="#b5ff9a"
                        Width="150"
                        Height="60"
                        BorderThickness="4"
                        BorderBrush="Black">
                        <Button Background="Transparent"
                            Content="เลือก"
                            Foreground="Black"
                            FontSize="28"
                            FontWeight="SemiBold"
                            FontFamily="Itim"
                            BorderThickness="0"
                            Cursor="Hand"
                                Click="Confirm_Click"/>
                    </Border>
                </Grid>
            </Border>


        </Grid>
    </Border>
</UserControl>
