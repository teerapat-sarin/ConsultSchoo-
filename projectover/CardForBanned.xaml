<UserControl x:Class="projectover.CardForBanned"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Style สำหรับ Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Width" Value="175"/>
            <Setter Property="Height" Value="250"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- MouseOver -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Width="175" Padding="0" CornerRadius="20" Background="White" Height="250"  
            Style="{StaticResource CardStyle}" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="175" Height="250" >
            <!-- ชื่อด้านบน -->
            <!-- ชื่อด้านบน -->
            <TextBlock Text="{Binding DisplayName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,10" FontFamily="itim"/>

            <!-- รูปภาพ -->
            <Border Width="140" Height="135" CornerRadius="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-10,0,0">
                <Border.Clip>
                    <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,140,135"/>
                </Border.Clip>
                <Image x:Name="CardImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-60"/>
            </Border>

            <!-- ชื่อเต็ม -->
            <TextBlock Text="{Binding Username, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5" FontFamily="itim"/>
            
                <Border  Background="Gray" Height="25" Width="90" CornerRadius="11">
                    <Button Background="Transparent" 
                            BorderThickness="0"
                            Content="ปลดแบน"
                            FontFamily="Itim"
                            FontSize="20"
                            Foreground="White"
                            Click="ReBan_Click"/>
                </Border>
        </StackPanel>
    </Border>
</UserControl>
