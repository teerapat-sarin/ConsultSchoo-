<UserControl x:Class="projectover.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:trans="clr-namespace:System.Windows.Media;assembly=PresentationCore"
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="800" d:DesignWidth="1400">
    <UserControl.Resources>
        <!-- ✅ แอนิเมชัน Slide ไป Register -->
        <Storyboard x:Key="SlideToLogin">
            <!-- รูปเลื่อนขวา -->
            <DoubleAnimation Storyboard.TargetName="RightImageTransform"
                             Storyboard.TargetProperty="X"
                             To="-700" Duration="0:0:0.5"/>

            <!-- LoginForm เลื่อนซ้าย -->
            <DoubleAnimation Storyboard.TargetName="RegisterFormTransform"
                             Storyboard.TargetProperty="X"
                             To="700" Duration="0:0:0.5"/>
        </Storyboard>

    </UserControl.Resources>

    <Border CornerRadius="15" Background="White" Margin="20" 
            Padding="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        
        <!-- แบ่ง Grid เป็น 2 คอลัมน์ -->
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch" 
              x:Name="ContentGrid" 
              Margin="0">
            
            <Grid.RenderTransform>
                <TranslateTransform X="0"/>
            </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- ครึ่งซ้าย -->
                <ColumnDefinition Width="*" />
                <!-- ครึ่งขวา -->
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" x:Name="RightImage" >
                <Border CornerRadius="20" >
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="RightImageTransform"/>
                    </Border.RenderTransform>
                    <Border.Background>
                        <ImageBrush ImageSource="C:\Users\acer\Desktop\Professor\SaDuang.jpg" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="RegisterForm" Grid.Column="0"   Margin="0">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="RegisterFormTransform"/>
                </Grid.RenderTransform>

                <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0"
                      Width="650" Height="200"
                      HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="525"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                            <TextBlock Text="Register" FontSize="80"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontFamily="Gluten" 
                               Grid.Column="1"
                                Margin="0,0,0,30"/>
                    <Button x:Name="backButton"
                            Grid.Column="0" 
                            Height="75" Width="75" 
                            VerticalAlignment="Top" 
                            Margin="0,40"
                            Click="backbutton_Click"
                            Foreground="#dc8ee9"
                            Background="Transparent"
                            BorderBrush="Transparent">
                        <Image Source="C:\Users\acer\Desktop\png project\back-button.png"/>
                    </Button>
                </Grid>
                <Grid Grid.Row="1" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock x:Name="FloatingLabelUser" Text="Username"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="UserTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <TextBox x:Name="tbUsername" 
                             Background="Transparent" 
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="10,0,0,0" 
                             FontSize="18"
                             GotFocus="TbUsername_GotFocus"
                             LostFocus="TbUsername_LostFocus"
                             TextChanged="TbUsername_TextChanged"/>
                    </Border>
                </Grid>
                
                <Grid Grid.Row="2" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="FloatingLabelPassword" Text="Password"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="PasswordTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <PasswordBox x:Name="tbPassword"
                                     Background="Transparent" 
                                     VerticalContentAlignment="Center"
                                     Padding="5,0,0,0" FontSize="18"
                                     GotFocus="PbPassword_GotFocus" LostFocus="PbPassword_LostFocus"
                                     PasswordChanged="PbPassword_PasswordChanged"
                                     BorderThickness="0"/>
                    </Border>
                </Grid>
                
                <Grid Grid.Row="3" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="FloatingLabelConfirmPassword" Text="Confrim Password"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="ConfrimPasswordTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <PasswordBox x:Name="PbConfirmPassword"
                                     Background="Transparent" 
                                     VerticalContentAlignment="Center"
                                     Padding="5,0,0,0" FontSize="18"
                                     GotFocus="PbConfirmPassword_GotFocus" LostFocus="PbConfirmPassword_LostFocus"
                                     PasswordChanged="PbConFrimPassword_PasswordChanged"
                                     BorderThickness="0"/>
                    </Border>
                </Grid>
                <Grid Grid.Row="4" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock x:Name="FloatingLabelEmail" Text="Email"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="EmailTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <TextBox x:Name="tbEmail" 
                             Background="Transparent" 
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="10,0,0,0" 
                             FontSize="18"
                             GotFocus="TbEmail_GotFocus"
                             LostFocus="TbEmail_LostFocus"
                             TextChanged="TbEmail_TextChanged"/>
                    </Border>
                </Grid>
                
                <Grid Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
                    <Border CornerRadius="20" ClipToBounds="False" Background="#0078D7" Padding="10" BorderThickness="5">
                        <Button Name="btnToggleRun"
                            Content="Register"
                            Click="btnToggleRegister_Click"
                            Width="200" Height="60"
                            FontSize="28"
                            BorderThickness="0"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"/>
                    </Border>
                </Grid>
            </Grid>

        </Grid>
    </Border>
</UserControl>
