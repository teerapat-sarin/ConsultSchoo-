<UserControl x:Class="projectover.ForgetPassPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:trans="clr-namespace:System.Windows.Media;assembly=PresentationCore"
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="800" d:DesignWidth="1400">
    <UserControl.Resources>
        <!-- ✅ แอนิเมชัน Slide ไป Register -->
        <Storyboard x:Key="SlideToLogin">
            <!-- รูปเลื่อนขวา -->
            <DoubleAnimation Storyboard.TargetName="RightImageTransform"
                             Storyboard.TargetProperty="X"
                             To="-700" Duration="0:0:0.5"/>

            <!-- LoginForm เลื่อนซ้าย -->
            <DoubleAnimation Storyboard.TargetName="RegisterFormTransform"
                             Storyboard.TargetProperty="X"
                             To="700" Duration="0:0:0.5"/>
        </Storyboard>

    </UserControl.Resources>
    <Border CornerRadius="15" Background="White" Margin="20" 
            Padding="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

        <!-- แบ่ง Grid เป็น 2 คอลัมน์ -->
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch" 
              x:Name="ContentGrid" 
              Margin="0">

            <Grid.RenderTransform>
                <TranslateTransform X="0"/>
            </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- ครึ่งซ้าย -->
                <ColumnDefinition Width="*" />
                <!-- ครึ่งขวา -->
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" x:Name="RightImage" >
                <Border CornerRadius="20" >
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="RightImageTransform"/>
                    </Border.RenderTransform>
                    <Border.Background>
                        <ImageBrush ImageSource="C:\Users\acer\Downloads\KhunaKorn.jpg"
                                    Stretch="UniformToFill"
                                    Viewport="0,0,1,1"
                                    ViewportUnits="RelativeToBoundingBox"
                                    TileMode="None"
                                    AlignmentX="center"
                                    AlignmentY="Top">
                            <!-- ปรับ Viewbox เพื่อขยับรูป -->
                            <ImageBrush.Viewbox>
                                <!-- X, Y, Width, Height (0-1) -->
                                <Rect X="0" Y="0.05" Width="1" Height="0.99"/>
                            </ImageBrush.Viewbox>
                        </ImageBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="RegisterForm" Grid.Column="0"   Margin="0">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="RegisterFormTransform"/>
                </Grid.RenderTransform>

                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                      Width="650" Height="200"
                      HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="525"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Forget Pass" FontSize="80"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontFamily="Gluten" 
                               Grid.Column="1" 
                               Margin="0,0,0,30"/>

                    <Button x:Name="backButton"
                            Grid.Column="0" 
                            Height="75" Width="75" 
                            VerticalAlignment="Top" 
                            Margin="0,40"
                            Click="backbutton_Click"
                            Foreground="#dc8ee9"
                            Background="Transparent"
                            BorderBrush="Transparent">
                        <Image Source="C:\Users\acer\Desktop\png project\back-button.png"/>
                    </Button>
                </Grid>

                <Grid Grid.Row="3" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock x:Name="FloatingLabelUser" Text="Username"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="UserTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <TextBox x:Name="tbUsername" 
                             Background="Transparent" 
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="10,0,0,0" 
                             FontSize="18"
                             GotFocus="TbUsername_GotFocus"
                             LostFocus="TbUsername_LostFocus"
                             TextChanged="TbUsername_TextChanged"/>
                    </Border>
                </Grid>
                
                <!-- ======================== EMAIL ======================== -->
                <Grid Grid.Row="1" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock x:Name="FloatingLabelEmail" Text="Email"
               VerticalAlignment="Center" HorizontalAlignment="Left"
               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="EmailTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>

                            <!-- ช่องอีเมล -->
                            <TextBox x:Name="tbEmail"
                                     Grid.Column="0"
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0,0,0" 
                                     FontSize="18"
                                     GotFocus="TbEmail_GotFocus"
                                     LostFocus="TbEmail_LostFocus"
                                     TextChanged="TbEmail_TextChanged"/>

                            <!-- ปุ่มส่ง OTP -->
                            <Button Content="ส่ง OTP"
                                    Grid.Column="1"
                                    Margin="5"
                                    Background="#0078D7"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderBrush="Transparent"
                                    Click="SendOtp_Click"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- ======================== OTP ======================== -->
                <Grid Grid.Row="2" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                    <TextBlock x:Name="FloatingLabelOtp" Text="OTP"
               VerticalAlignment="Center" HorizontalAlignment="Left"
               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="OtpTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>

                            <!-- ช่อง OTP -->
                            <TextBox x:Name="tbOtp"
                                     Grid.Column="0"
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0,0,0" 
                                     FontSize="18"
                                     GotFocus="TbOtp_GotFocus"
                                     LostFocus="TbOtp_LostFocus"
                                     TextChanged="TbOtp_TextChanged"/>

                            <!-- ปุ่มยืนยัน OTP -->
                            <Button Content="ยืนยัน"
                                    Grid.Column="1"
                                    Margin="5"
                                    Background="LimeGreen"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderBrush="Transparent"
                                    Click="VerifyOtp_Click"/>
                        </Grid>
                    </Border>
                </Grid>
                

                <Button Content="ยืนยัน OTP" Width="150" Height="60" Margin="0,240,0,0"
        HorizontalAlignment="Center" Click="VerifyOtp_Click"/>
                
                <Grid Grid.Row="4" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="FloatingLabelPassword" Text="Password"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="PasswordTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <PasswordBox x:Name="tbPassword"
                                     Background="Transparent" 
                                     VerticalContentAlignment="Center"
                                     Padding="5,0,0,0" FontSize="18"
                                     GotFocus="PbPassword_GotFocus" LostFocus="PbPassword_LostFocus"
                                     PasswordChanged="PbPassword_PasswordChanged"
                                     BorderThickness="0"/>
                    </Border>
                </Grid>

                <Grid Grid.Row="5" Width="500" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="FloatingLabelConfirmPassword" Text="Confrim Password"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="ConfrimPasswordTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <PasswordBox x:Name="PbConfirmPassword"
                                     Background="Transparent" 
                                     VerticalContentAlignment="Center"
                                     Padding="5,0,0,0" FontSize="18"
                                     GotFocus="PbConfirmPassword_GotFocus" LostFocus="PbConfirmPassword_LostFocus"
                                     PasswordChanged="PbConFrimPassword_PasswordChanged"
                                     BorderThickness="0"/>
                    </Border>
                </Grid>
                <Grid Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
                    <Border CornerRadius="20" ClipToBounds="False" Background="#0078D7" Padding="10" BorderThickness="5">
                        <Button Name="btnToggleRun"
                            Content="Confirm"
                            Click="btnToggleConfirm_Click"
                            Width="200" Height="60"
                            FontSize="28"
                            BorderThickness="0"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"/>
                    </Border>
                </Grid>
            </Grid>

        </Grid>
        </Border>
</UserControl>
