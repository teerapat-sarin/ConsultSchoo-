<UserControl x:Class="projectover.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:trans="clr-namespace:System.Windows.Media;assembly=PresentationCore"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">
    
    <UserControl.Resources>
        <!-- ✅ แอนิเมชัน Slide ไป Register -->
        <Storyboard x:Key="SlideToRegister">
            <!-- รูปเลื่อนขวา -->
            <DoubleAnimation Storyboard.TargetName="LeftImageTransform"
                             Storyboard.TargetProperty="X"
                             To="700" Duration="0:0:0.5"/>

            <!-- LoginForm เลื่อนซ้าย -->
            <DoubleAnimation Storyboard.TargetName="LoginFormTransform"
                             Storyboard.TargetProperty="X"
                             To="-700" Duration="0:0:0.5"/>
        </Storyboard>

    </UserControl.Resources>
    
    <Border CornerRadius="15" Background="White" Margin="20" Padding="0">
        <!-- แบ่ง Grid เป็น 2 คอลัมน์ -->
        <Grid  x:Name="ContentGrid" Margin="0">
            
            <Grid.RenderTransform>
                <TranslateTransform X="0"/>
            </Grid.RenderTransform>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- ครึ่งซ้าย -->
                <ColumnDefinition Width="*" />
                <!-- ครึ่งขวา -->
            </Grid.ColumnDefinitions>

            <!-- ภาพด้านซ้าย -->

            <Grid Grid.Column="0" x:Name="LeftImage" >
                <Border CornerRadius="30">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="LeftImageTransform" />
                    </Border.RenderTransform>
                    <Border.Background>
                        <ImageBrush 
                        ImageSource="C:\Users\acer\Desktop\Professor\Pe_jumpa.jpg" 
                        Stretch="UniformToFill"
                        AlignmentY="Top"/>
                    </Border.Background>
                </Border>
            </Grid>



            <!-- ฝั่งฟอร์ม Login -->
            <Grid x:Name="LoginForm" Grid.Column="1" Margin="40" >
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="LoginFormTransform"/>
                </Grid.RenderTransform>

                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0"
                      Width="400" Height="300"
                      HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- แสดงรูป -->
                    <Image Source="C:\Users\acer\Downloads\LogotoUseAll.png" 
                           Stretch="Uniform" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Text="Login" FontSize="100"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontFamily="Gluten" Grid.Row="1"/>
                </Grid>

                <!-- Username -->

                <Grid Grid.Row="1" Width="400" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock x:Name="FloatingLabelUser" Text="Username"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="UserTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <TextBox x:Name="tbUsername" 
                             Background="Transparent" 
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="10,0,0,0" 
                             FontSize="18"
                             GotFocus="TbUsername_GotFocus"
                             LostFocus="TbUsername_LostFocus"
                             TextChanged="TbUsername_TextChanged"/>
                    </Border>

                </Grid>

                <!-- Password -->
                <Grid Grid.Row="2" Width="400" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="FloatingLabelPassword" Text="Password"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0,0,0" FontSize="18" Foreground="Gray" IsHitTestVisible="False">
                        <TextBlock.RenderTransform>
                            <trans:TranslateTransform x:Name="PasswordTranslate"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Border CornerRadius="10" BorderBrush="#B0B0B0" BorderThickness="1" Background="Transparent" Height="70" >
                        <PasswordBox x:Name="tbPassword"
                                     Background="Transparent" 
                                     VerticalContentAlignment="Center"
                                     Padding="5,0,0,0" FontSize="18"
                                     GotFocus="PbPassword_GotFocus" LostFocus="PbPassword_LostFocus"
                                     PasswordChanged="PbPassword_PasswordChanged"
                                     BorderThickness="0"/>
                    </Border>
                </Grid>

                <!-- ปุ่ม Run -->

                <Grid Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="250,0,0,0">
                    <Button Name="forgotBtn" Content="Forgot Password"
                            Click="ForgotBtn_Click"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="#5DADE2"
                                        FontSize="14"
                            Cursor="Hand"
                            Padding="0"
                            BorderThickness="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <StackPanel>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Rectangle Height="1" Fill="#5DADE2" Margin="0,2,0,0"/>
                                </StackPanel>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="4" Width="400" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- ปุ่ม Register -->

                    <Border CornerRadius="20" ClipToBounds="False" Background="#979493" Grid.Column="0"  Width="180" Height="70">
                        <Button Name="registerBtn"
                            Content="Register"
                            Click="RegisterBtn_Click"
                            Width="180" Height="60"
                            FontSize="28"
                            BorderThickness="0"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"/>
                    </Border>

                    <Border CornerRadius="20" ClipToBounds="False" Background="#0078D7" Grid.Column="1"  Width="180" Height="70">
                        <Button Name="btnToggleRun"
                            Content="Login"
                            Click="btnToggleRun_Click"
                            Width="180" Height="60"
                            FontSize="28"
                            BorderThickness="0"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"/>
                    </Border>

                </Grid>
            </Grid>
        </Grid>
    </Border>
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{x:Static ApplicationCommands.Open}" />
    </UserControl.InputBindings>
</UserControl>