<UserControl x:Class="projectover.DetailMBTi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectover"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <Border Background="White" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" CornerRadius="30" Background="#ffecb9" BorderBrush="Black" BorderThickness="4">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="500"/>
                </Grid.ColumnDefinitions>

                    <TextBlock Text="ผลการประเมิน" 
                       Background="Transparent"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="50"
                       FontFamily="itim"
                               Margin="500,0,0,0"
                               Grid.Column="0"/>
                    <Border Background="#00e909" CornerRadius="30" Grid.Column="1" Height="70" Margin="0,0,0,0" Width="300">
                        <Button Grid.Column="1"
                            Content="ทำแบบประเมินใหม่"
                            FontFamily="itim"
                            FontSize="36"
                            Height="70"
                            Width="280"
                                Foreground="White"
                            Background="Transparent"
                                BorderThickness="0"
                                Click="Retest_Click"/>
                        </Border>
                </Grid>
                </Border>

                    <Grid Grid.Row="1">
                <Border CornerRadius="30" Width="300" Height="120" 
            BorderThickness="4"
            BorderBrush="Black">
                    <TextBlock Text="{Binding MBTI}" 
                   FontSize="56"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                               FontFamily="itim"
                               FontWeight="Bold"/>
                </Border>
            </Grid>

            <Grid HorizontalAlignment="Center"
                  Grid.Row="2"
                  VerticalAlignment="Top">
                            <Border CornerRadius="20" 
                        Background="#ded6d6"
                        BorderBrush="Black"
                        BorderThickness="4"
                        Width="1200"
                        Height="350">
                    <!-- ✅ เพิ่ม ScrollViewer -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10">
                        <TextBlock Text="{Binding MBTIDetail}" 
                       FontSize="48" FontWeight="Bold" FontFamily="itim" HorizontalAlignment="Center" 
                       TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </Grid>

            <Grid HorizontalAlignment="Center"
                          Grid.Row="3"
                          Height="60" Margin="-30">

                <Border CornerRadius="20" 
                                Background="#b5ff9a"
                                BorderBrush="Black"
                                BorderThickness="4"
                                Width="200">

                    <Button     x:Name="ConfirmButton"
                                    Content="Confirm"
                                    Background="Transparent"
                                    FontSize="36"
                                    FontFamily="itim"
                                    BorderThickness="0"
                                    Click="Confirm_Click"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
